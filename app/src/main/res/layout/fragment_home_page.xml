<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.liuzhao.onroad.fragment.HomePageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_home_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pic_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VOL.1213"
                android:textSize="@dimen/text_big_14sp" />

            <TextView
                android:id="@+id/tv_pic_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="静默山水间"
                android:textSize="@dimen/text_big_14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_home_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="内容"
            android:textSize="@dimen/text_big_16sp" />
        <TextView
            android:id="@+id/tv_home_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="by 咪蒙"
            android:textSize="@dimen/text_big_14sp" />
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="02 Feb.2016 Tue"
            android:gravity="right"
            android:textSize="@dimen/text_big_14sp" />
    </LinearLayout>
</ScrollView>